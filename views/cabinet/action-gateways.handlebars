 <title>{{text}}</title>
  </head>
  <body>
    <main id="layout" class="layout flex_b">
      {{>_aside}}
      <section class="a_sec">
        {{>_layout-nav}}
         <div class="main_wrap">
         <div class="mr5-a flex_c_c padd10-a">
          <form action="/admin/gateways/action?type={{type}}&_id={{_id}}" method="post" id="form" class="flex_b a_form_container br30  a_container" accept-charset="utf-8">
            <div class="form_card_a f_card">
              <h4 class="padd10-a m5-a">{{text}}</h4>
              <div class="input_card flex_c_c">
                <div class="modal_avatar flex_c_c">
                  <div class="avatar br60 flex_c_c">
                    <img id="src_img" src="{{item.src}}" class="br60" alt="img">
                    {{>_cropper-img}}
                  </div>
                </div>
              </div>
            </div>
            <div  class="form_card_b flex_b f_card">
              
    <div class="input_card">
      <div class="input_wrap br6-a flex_b_c">
        <input value="{{item.name}}" class="input" id="name"  name="name" type="text"/>
        <label for="name">Nome</label>
      </div>
      <div class="label_error"></div>
    </div>
    <div class="input_card">
      <div class="input_wrap br6-a flex_b_c">
        <input value="{{item.account}}" class="input" id="account"  name="account" type="number"/>
        <label for="account">Conta</label>
          <div  class="input_left_box flex_c_c">
    <div class="btn_circle flex_c_c br60">
     <i class="bi bi-chevron-down"></i>
      <div class="a_c_menu a_container_br">
          <div accesskey="number" class="padd5-a accountType">Número</div>
          <div accesskey="email" class="padd5-a accountType">Email</div>
          <div accesskey="text" class="padd5-a accountType">Texto</div>
      </div>
    </div>
  </div>

      </div>
      <div class="label_error"></div>
    </div>
     <div class="input_card">
      <div class="input_wrap br6-a flex_b_c">
        <input value="{{item.owner}}" class="input" id="owner"  name="owner" type="text"/>
        <label for="name">Nome do proprietario</label>
      </div>
      <div class="label_error"></div>
    </div>
  
   <div class="input_card flex_b_c">
      <p>Pagamento intantaneo</p>
      <input type="hidden" name="paymentInstantly" id="paymentInstantly" value="{{item.paymentInstantly}}"/>
      <input accesskey="paymentInstantly" type="checkbox" class="inputs pt-PT checkboxs" value="{{item.paymentInstantly}}"/>
    </div>
   
    <div class="input_card flex_b_c">
      <p>Mostrar para o público</p>
       <input type="hidden" name="status" id="status" value="{{item.status}}"/>
      <input accesskey="status" type="checkbox"  class="inputs pt-PT checkboxs" value="{{item.status}}"/>
    </div>
   
              <div class="input_card">
                <button id="submitBtn" type="button" class="br6-a primary-btn"><div id="btnText">Continuar</div>{{>_minloader}}</button>
              </div>
            </div>
          </form>
        </div>
        </div>
       
      </section>
      {{>_profile}}
       <script type="text/javascript" src="/js/gre.js"></script>
      <script type="text/javascript" src="/js/layout.js"></script>
    </main>
  </body>